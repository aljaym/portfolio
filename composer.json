{
    "name": "aljaymallari/wordpress-boilerplate",
    "description": "WordPress package boilerplate for starting projects",
    "type": "project",
    "authors": [
        {
            "name": "Aljay Mallari",
            "email": "aljaydeveloper07@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "drupal-composer/preserve-paths": true,
            "johnpbloch/wordpress-core-installer": true
        }
    },
    "require": {
        "composer/installers": "^2.0",
        "drupal-composer/preserve-paths": "^0.1",
        "johnpbloch/wordpress-core": "^6.6",
        "johnpbloch/wordpress-core-installer": "^2.0",
        "psy/psysh": "^0.12",
        "vlucas/phpdotenv": "^5.0",
        "wp-cli/wp-cli": "^2.10",
        "wpackagist-plugin/custom-post-type-ui": "^1.14",
        "wpackagist-plugin/disable-comments": "^2.0",
        "wpackagist-plugin/google-analytics-for-wordpress": "^9.8",
        "wpackagist-plugin/svg-support": "^2.5",
        "wpackagist-plugin/user-role-editor": "^4.63",
        "wpackagist-plugin/wordpress-seo": "^25.9",
        "wpackagist-plugin/wp-mail-smtp": "^4.0",
        "wpackagist-plugin/sucuri-scanner": "^1.9",
        "wpackagist-plugin/advanced-custom-fields": "^6.3",
        "wpackagist-plugin/ajax-load-more": "^6.0",
        "wpackagist-plugin/contact-form-7": "^5.9"
    },
    "require-dev": {
        "wpackagist-plugin/debug-bar": "^1.0",
        "wpackagist-plugin/show-current-template": "^0.4"
    },
    "extra": {
        "installer-paths": {
            "web/wp-content/themes/{$name}/": [
                "type:wordpress-theme"
            ],
            "web/wp-content/plugins/{$name}/": [
                "type:wordpress-plugin"
            ]
        },
        "preserve-paths": [
            "web/wp-config.php",
            "web/wp-content/uploads",
            "web/wp-content/themes/project"
        ],
        "wordpress-install-dir": "web"
    },
    "scripts": {
        "post-install-cmd": [
            "cp -r commercial_plugins/* web/wp-content/plugins/ || true",
            "composer dump-autoload",
            "mkdir -p web/wp-content/themes/project",
            "echo 'Work your magic in the child theme folder: web/wp-content/themes/project'"
        ],
        "post-update-cmd": [
            "cp -r commercial_plugins/* web/wp-content/plugins/ || true",
            "composer dump-autoload"
        ]
    }
}
